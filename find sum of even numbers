#include<stdio.h>
int main()
{
int number;
unsigned int range;
int x;
printf("please give the range:");
scanf("%d",&range);
for(number=1;number<=range;number++)
//using for loop because it makes the programme simple and concise
if(number%2==0)
{
x=x+number;
}
printf("your sum is:%d",x);




return 0;
}

